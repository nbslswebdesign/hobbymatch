<div class="home-callout text-center container-fluid">
    <h1>Welcome to HobbyMatch</h1>
    <h2>Helping you find people with similar hobbies in your area</h2>
</div>

<div class="container home-signup-links">
        <div class="row">
            
            <% if user_signed_in? %>
            <h2 class="text-center">Welcome to your account</h2>
            <br>
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">Your Profile</h2>
                        <% if current_user.profile %>
                            <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                            <%= link_to "View your profile", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block', class: 'btn btn-default btn-lg btn-block' %>
                        <% else %>
                            <p class="text-center">Why not create your profile to get started?</p>
                            <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %> 
                        <% end %>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">The Community</h2>
                        <p class="text-center">This is where you'll find people with similar hobbies to yourself.</p>
                        <%= link_to "Visit the community", users_path, class: 'btn btn-default btn-lg btn-block' %>
                    </div>
                </div>
                
            <% else %>
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">Basic Membership</h2>
                        <h4>Sign up for free to find people with similar hobbies just like you.</h4>
                        <br>
                        <%= link_to "Sign up as a basic user", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
                    </div>
                </div>
            <!--<div class="col-md-6">-->
            <!--    <div class="well">-->
            <!--        <h2 class="text-center">Pro Membership</h2>-->
            <!--        <h4>Get a pro account if you want basic membership as well as access to exclusive member events and more.</h4> -->
            <!--        <%= link_to "Sign up as a pro user", new_user_registration_path(plan: @pro_plan.id) , class: 'btn btn-success btn-lg btn-block' %>-->
            <!--    </div>-->
            <!--</div>-->
        </div>
    <% end %>
</div>