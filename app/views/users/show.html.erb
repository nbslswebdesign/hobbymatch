<div class="container">
  <div class="row">
      <div class="col-md-3 text-center">
        <div class="well">  
          <%= image_tag @user.profile.avatar.url, class: 'avatar_img' %>
      </div>
    </div>
      
      <div class="col-md-6">
        <h1><span class="fas fa-user-secret"></span> <%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
          <div class="well profile-block profile-description">
            <h3><span class="fas fa-theater-masks"></span> My Hobbies</h3>
            <%= @user.profile.hobbies %>
          </div>
          <div class="well profile-block profile-description">
            <h3><span class="far fa-address-card"></span> A bit about me</h3>
            <%= @user.profile.description %>
          </div>
          <div class="well profile-block profile-description">
            <h3><span class="fas fa-phone"></span> My contact details</h3>
            <%= @user.profile.contact_email %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  
  
  
  
